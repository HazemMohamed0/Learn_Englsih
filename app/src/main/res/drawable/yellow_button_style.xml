        <shape android:shape="rectangle">
            <solid android:color="#FFFF9800"/> <!-- Darker yellow -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFEB3B"/> <!-- Light yellow -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>